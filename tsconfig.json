{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["build", "node_modules"]
}
